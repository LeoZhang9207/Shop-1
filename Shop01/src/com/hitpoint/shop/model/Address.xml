<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//En"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hitpoint.shop.model.Address">
	<insert id="add" parameterType="Address">
		insert into t_address (name,phone,postcode,user_id) value 
		(#{name},#{phone},#{postcode},#{user.id})
	</insert>
	
	<update id="update" parameterType="Address">
		update t_address set nickname=#{nickname},password=#{password},type=#{type} where id=#{id}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from t_Address where id = #{id}
	</delete>
	
	<select id="load" resultType="Address" parameterType="int">
		select * from t_Address where id = #{id}
	</select>
	
	<select id="load_by_username" parameterType="String" resultType="Address">
		select * from t_Address where username = #{username}
	</select>
	<!--使用#{}会在字符串外面添加''，而使用${}则不会添加''  -->
	<select id="find" resultType="Address" parameterType="Map">
		select * from t_Address
		<if test="name!=null">
		where (username like #{name} or nickname like #{name})
		</if> 
		<if test="sort!=null">
			order by ${sort} 
			<if test="order!=null">${order}</if>
			<!-- <choose>
				<when test="order!=null">${order}</when>
				<otherwise>asc</otherwise>
			</choose> -->
		</if>
		limit #{pageOffset},#{pageSize}
	</select>
	
	<select id="find_count" resultType="int" parameterType="map">
		select count(*) from t_Address 
		<if test="name!=null">where (username like #{name} or nickname like #{name})</if>
	</select>
</mapper>